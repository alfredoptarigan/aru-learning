# =====================================================
# ARU Learning - Docker Development Environment
# =====================================================

# Application
APP_NAME="Pixel Edu"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://aru-learning.local

# Database (Docker)
# Note: 'postgres' is the Docker service name
# It automatically resolves to the container IP
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=aru_learning
DB_USERNAME=laravel
DB_PASSWORD=secret

# Cache & Session (Docker)
# Note: 'redis' is the Docker service name
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis (Docker)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Filesystem
FILESYSTEM_DISK=local

# DigitalOcean Spaces (for testing with production data)
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_ENDPOINT=
DO_SPACES_REGION=
DO_SPACES_BUCKET=
DO_SPACES_URL=

# Mail (MailHog for testing)
# Note: 'mailhog' is the Docker service name
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="dev@aru-learning.local"
MAIL_FROM_NAME="${APP_NAME}"

# External APIs (Development/Testing keys)
YOUTUBE_API_KEY=
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Vite
VITE_APP_NAME="${APP_NAME}"

# Docker
APP_SEED=true
