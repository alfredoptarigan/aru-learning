# =====================================================
# Application Configuration
# =====================================================
APP_NAME="Pixel Edu"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://aru-learning.alfredoptarigan.tech

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# =====================================================
# Logging
# =====================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =====================================================
# Database (PostgreSQL)
# =====================================================
# IMPORTANT: These values are for Docker deployment
# DB_HOST, DB_PORT will automatically resolve to containers
# For local development: use 'postgres' (Docker service name)
# For production server: use 'postgres' (Docker service name)
# Direct access from host: use 'localhost' or '127.0.0.1'
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=aru_learning
DB_USERNAME=laravel
DB_PASSWORD=

# =====================================================
# Session & Cache (Redis)
# =====================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis
CACHE_PREFIX=aru_learning_cache

# =====================================================
# Broadcasting & Queue
# =====================================================
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=redis

# =====================================================
# Redis Configuration
# =====================================================
# IMPORTANT: Redis connection for Docker
# For Docker deployment: use 'redis' (service name)
# For direct access from host: use 'localhost'
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# =====================================================
# Filesystem & Storage
# =====================================================
# Options: local, s3, do_spaces
FILESYSTEM_DISK=do_spaces

# DigitalOcean Spaces (S3-compatible)
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_ENDPOINT=https://sgp1.digitaloceanspaces.com
DO_SPACES_REGION=sgp1
DO_SPACES_BUCKET=
DO_SPACES_URL=

# AWS S3 (Alternative)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =====================================================
# Mail Configuration
# =====================================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@aru-learning.alfredoptarigan.tech"
MAIL_FROM_NAME="${APP_NAME}"

# =====================================================
# External APIs
# =====================================================
# YouTube API (for video metadata)
YOUTUBE_API_KEY=

# Stripe Payment Gateway
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# =====================================================
# Vite
# =====================================================
VITE_APP_NAME="${APP_NAME}"

# =====================================================
# Docker Specific (Optional)
# =====================================================
# Set to true to run database seeders on container startup
APP_SEED=false
